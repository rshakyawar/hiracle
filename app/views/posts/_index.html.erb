<h1>Listing posts</h1>

    <table width="50%">
      <tr >
        <th cellspacing = 4>Post by You</th>
      </tr>
      <tr>
        <th>Content</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% if !@posts.blank? %>
        <% @posts.each do |post| %>
          <tr>
              <td><%= post.content %></td>
              <td><%= link_to 'Show', post, :remote=>true %></td>
              <td><%= link_to 'Edit', edit_post_path(post), :remote=>true %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
            </tr>
        <% end %>
      <%else%>
        <tr>  
          <td>You have not created any post yet.</td>
        </tr>
      <%end%>
    </table>
<br/>
<br/>
<br/>
    <table width="50%">
      <tr>
        <th>Post by Your Followings</th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Content</th>
        
      </tr>

    <% @posts_follow.each do |post| %>
      <% @post_user = User.find_by_id(post.user.id) %>

      <tr>
        <td><%= @post_user.first_name %> <%= @post_user.last_name%></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
    </table>

<br />

<%= link_to 'New Post', new_post_path, :remote => true %>
